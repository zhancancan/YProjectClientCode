#ifndef SIMPLE_UNLIT_CG 
#define SIMPLE_UNLIT_CG
    
		#include "UnityCG.cginc"   
		#include "../Core/fog_tools.cginc" 
		#include "../Core/math_tools.cginc"
  
		struct v2f{
			float2 uv : TEXCOORD0;// xy: uv, z:specular_ceoff;
			float4 vertex : SV_POSITION; 	
			UNITY_FOG_COORDS(1)
			  
		}; 
	 
		half4 _Color;   

		sampler2D _MainTex;	 
		half4 _MainTex_ST;

		v2f vert (appdata_full v){
			v2f o;     
			o.vertex = mul(UNITY_MATRIX_MVP,half4(0,0,0,1)) ;
			o.vertex.xy+=v.vertex.xy* half2(1,_ScreenParams.x/_ScreenParams.y);
			o.uv.xy = TRANSFORM_TEX(v.texcoord, _MainTex); 		  
			return o;
		}
               
		   

		fixed4 frag (v2f i) : SV_Target{	 
			half4 col =  tex2D(_MainTex, i.uv.xy)*_Color; 		
		//	PURE_APPLY_FOG(i.fogCoord, col); // apply fog		 
			return col;
		}
  

#endif 